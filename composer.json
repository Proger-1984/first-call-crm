{
    "name": "rest-api/slim4",
    "description": "REST API на Slim 4 с PostgreSQL",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "slim/slim": "^4.10",
        "slim/psr7": "^1.6",
        "slim/http": "^1.3",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.2",
        "illuminate/database": "^10.0",
        "monolog/monolog": "^3.4",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.4",
        "respect/validation": "^2.2",
        "php-open-source-saver/jwt-auth": "^2.0",
        "symfony/yaml": "^7.2",
        "guzzlehttp/guzzle": "^7.9",
      "ext-curl": "*",
      "ext-pdo": "*",
      "ext-zip": "*",
        "endroid/qr-code": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
